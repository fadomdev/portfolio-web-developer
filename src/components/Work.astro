---
import Skill from './Skill.astro'
interface Props {
  title: string
  subtitle: string
  date: string
  description: string | string[]
  skills: string[]
}

const { title, subtitle, date, description, skills } = Astro.props
---

<li class='mb-10 ms-4'>
  <div
    class='absolute w-3 h-3 bg-zinc-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-zinc-600 dark:bg-zinc-700'
  >
  </div>
  <time
    class='mb-1 text-sm font-normal leading-none text-zinc-600 dark:text-zinc-400'
    >{date}</time
  >
  <h3 class='text-md font-semibold text-zinc-600 dark:text-zinc-300'>
    {title}
  </h3>
  <p class='mb-4 text-base font-normal text-zinc-600 dark:text-zinc-400'>
    {
      description instanceof Array
        ? description.map((desc) => (
            <p class='mb-2 text-zinc-600 dark:text-zinc-400'>{desc}</p>
          ))
        : description
    }
  </p>
  <p class='mb-4 text-base font-normal text-zinc-500 dark:text-zinc-400'>
    {skills && skills.map((skill) => <Skill title={skill} />)}
  </p>
</li>
