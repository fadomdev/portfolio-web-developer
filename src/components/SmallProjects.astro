---
import smallProjects from '../data/smallProjects.json'
import { BiLinkExternal } from 'react-icons/bi'
import LinkButton from '../components/ui/LinkButton'
import Skill from './Skill.astro'
---

<div>
  <h2
    class='text-3xl text-stone-600 dark:text-stone-300 font-light mb-10 text-center'
  >
    Proyectos Peque√±os
  </h2>
  <div
    class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6 lg:mb-16'
  >
    {
      smallProjects.data.map((project) => (
        <article class='group flex flex-col bg-white dark:bg-zinc-800 rounded-xl border border-zinc-200 dark:border-zinc-700 p-5 hover:shadow-xl hover:border-zinc-300 dark:hover:border-zinc-600 transition-all duration-300 hover:-translate-y-1'>
          <a
            href={project.url}
            class='hover:scale-105 block transition-transform duration-300 mb-4'
            target='_blank'
          >
            <img
              class='rounded-lg overflow-hidden object-cover aspect-video w-full shadow-md group-hover:shadow-lg transition-shadow duration-300'
              src={project.image}
              alt={`Captura de pantalla del proyecto ${project.title}`}
            />
          </a>
          <div class='flex-1 flex flex-col'>
            <h3 class='text-lg font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200'>
              <a
                href={project.url}
                target='_blank'
                class='hover:text-blue-600 dark:hover:text-blue-400'
              >
                {project.title}
              </a>
            </h3>
            <p class='mb-4 font-light text-zinc-700 dark:text-zinc-300 text-sm leading-relaxed flex-1'>
              {project.description}
            </p>
            <ul class='inline-flex flex-wrap gap-1.5 mb-4'>
              {project.skills.map((skill) => (
                <Skill title={skill} />
              ))}
            </ul>
            <div class='mt-auto'>
              <LinkButton href={project.url} target='_blank'>
                <BiLinkExternal size={16} className='inline mr-1' />
                Ver Proyecto
              </LinkButton>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</div>
