---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Profile from '../components/Profile.astro'
import Skills from '../components/Skills.astro'
import Experience from '../components/Experience.astro'
import Contact from '../components/Contact.astro'
---

<Layout title='Francisco Aquino DomÃ­nguez'>
  <Header />
  <main class='flex flex-col w-full lg:max-w-[720px] mx-auto px-4'>
    <Profile />

    <!-- list skills developers -->
    <div class='my-10'>
      <Skills />
    </div>

    <!-- Proyectos -->
    <div class='my-10'>
      <Experience />
    </div>

    <div class='flex flex-col mt-10'>
      <Contact />
    </div>
  </main>
  <footer class='mt-8'>
    <div
      class='flex flex-col items-center justify-center w-full h-24 border-t border-zinc-300 dark:border-zinc-800'
    >
      <span class='text-sm text-gray-500'>
        Made with
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='inline text-red-600'
          ><path
            d='M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z'
          ></path></svg
        >
        by
        <a
          href='https://fadom.dev'
          class='font-bold no-underline text-gray-500 hover:text-gray-400'
          >@fadomdev</a
        >
      </span>
    </div>
  </footer>
</Layout>
